#!/usr/bin/env perl6

use lib 'lib';

use Utiaji::Server;
use Utiaji::Log;
use Utiaji::App::Templater;

logger.level = 'debug';

my $server = Utiaji::Server.new(host => 'localhost', port => 3333);
$server.app = Utiaji::App::Templater.new;
say "Listening on { $server.url } ";
$server.start;
$server.await;

